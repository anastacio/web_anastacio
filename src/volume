 <script type="text/javascript">
  
//source
//http://balance.chakrahealingsounds.com/about-us/solfeggio-frequencies-tibetan-singing-bowls/
let sineWaves = [];
let amplitudes = [];
let destAmplitudes = [];
var minAmp = 0.0;
 

function setup() {

  let sineFreq = new Array(396, 417, 528, 639, 741, 852, 963 );//Hz

  createCanvas(windowWidth, windowHeight);
  background(0);
  fill(255);
  text("Press 1. UT – 396 Hz – Liberating Guilt and Fear (the 1st Chakra)", 30, 100);
  text("Press 2. RE – 417 Hz – Undoing Situations and Facilitating Change (the 2nd Chakra)", 30, 130);
  text("Press 3. MI – 528 Hz – Transformation and Miracles (the 3rd Chakra)", 30, 160);
  text("Press 4. FA – 639 Hz – Connecting/Relationships (the 4th Chakra)", 30, 190);
  text("Press 5. SOL – 741 Hz – Awakening Intuition (the 5th Chakra)", 30, 220);
  text("Press 6. LA – 852 Hz – Returning to Spiritual Order (the 6th Chakra)", 30, 250);
  text("Press 7. SI – 963 Hz – East meets West (the 7th Chakra)", 30, 280);
  
  for (let i = 0; i < sineFreq.length; i++) {
    sineWaves[i] = new p5.Oscillator();
    sineWaves[i].setType('sine');
    sineWaves[i].freq(sineFreq[i]);
    sineWaves[i].amp(minAmp);
    destAmplitudes[i] = minAmp;
    amplitudes[i] = minAmp;
    sineWaves[i].start();
  }
} 

function som(sonido){
  if(Number(sonido) >= 1 && Number(sonido) <= sineFreq.length)
    destAmplitudes[Number(sonido)-1] = 1.0;
}

function draw() {
  for (let i = 0; i < sineFreq.length; i++) {
    if(destAmplitudes[i]>minAmp) destAmplitudes[i] -= 0.01;
    else destAmplitudes[i] = minAmp;
    
    amplitudes[i] += (destAmplitudes[i] - amplitudes[i]) * 0.03;
    sineWaves[i].amp(amplitudes[i]);
  }
}.   


</script>
